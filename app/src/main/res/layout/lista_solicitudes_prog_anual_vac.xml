<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ListaSolicitudesCardViewRHD"
    android:checkable="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="2"
        android:orientation="horizontal">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_grupo"
                style="@style/TextHeaderRHD"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/grupo"
                android:textStyle="normal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_grupo"
                style="@style/TextBodyRHD"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="Grupo"
                android:textStyle="normal" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_secuencia"
                style="@style/TextHeaderRHD"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/secuencia"
                android:textStyle="normal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_secuencia"
                style="@style/TextBodyRHD"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="Secuencia"
                android:textStyle="normal" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_fechaInicio"
                style="@style/TextHeaderRHD"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/fecha_inicio"
                android:textStyle="normal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_fechaInicio"
                style="@style/TextBodyRHD"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="Fecha Inicio"
                android:textStyle="normal" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_FechaTermino"
                style="@style/TextHeaderRHD"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/fecha_termino"
                android:textStyle="normal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_FechaTermino"
                style="@style/TextBodyRHD"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="Fecha Termino"
                android:textStyle="normal" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_diasTomados"
                style="@style/TextHeaderRHD"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/dias_tomados"
                android:textStyle="normal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_diasTomados"
                style="@style/TextBodyRHD"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="Dias Tomados"
                android:textStyle="normal" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbAutorizar"
            style="@style/TextSubtitleRHD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="@color/cbcardView"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:visibility="gone" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>