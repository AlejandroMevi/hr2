<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_login"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.venturessoft.human.humanrhdapp.ui.login.ui.fragments.LoginFragment"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/recoverPasswordFragment"
        android:name="com.venturessoft.human.humanrhdapp.ui.login.ui.fragments.RecoverPasswordFragment"
        tools:layout="@layout/fragment_recover_password" />

    <action
        android:id="@+id/to_recoverPasswordFragment"
        app:destination="@id/recoverPasswordFragment"
        app:enterAnim="@anim/anim_enter_right"
        app:exitAnim="@anim/anim_exit_left"
        app:popEnterAnim="@anim/anim_enter_left"
        app:popExitAnim="@anim/anim_exit_right" />
</navigation>